      "500": {
        "description": "Unexpected Error",
        "content": {
          "application/vnd.amadeus+json": {
            "schema": {
              "type": "object",
              "title": "Errors",
              "properties": {
                "errors": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Error"
